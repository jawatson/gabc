{
    "app-id" : "me.pm.m0dns.gabc",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "gabc",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "cleanup" : [
    	"/bin/abc2abc",
    	"/bin/abcmatch",
    	"/bin/mftext",
    	"/bin/midi2abc",
    	"/bin/midicopy",
    	"/bin/midistats",
    	"/bin/yaps",
        "/include",
        "/lib/pkgconfig",
        "/lib/debug/source/abcm2ps",
        "/lib/debug/source/abcmidi",
        "/man",
        "/share/doc",
        "/share/doc/abcm2ps",
        "/share/doc/abcmidi",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "abcm2ps",
            "buildsystem": "autotools",
            "no-autogen": true,
            "sources": [
                {
                    "type" : "git",
                    "url": "https://github.com/lewdlime/abcm2ps.git"
                }
            ]
        },
        {
            "name": "abcmidi",
            "buildsystem": "autotools",
            "no-autogen": true,
            "sources": [
                {
                    "type" : "git",
                    "url": "https://github.com/sshlien/abcmidi.git"
                }
            ]
        },
        {
            "name" : "gabc",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/jwatson/Projects"
                }
            ]
        }
    ]
}
